public class MainElectrodomesticos {

	
	public static void main(String[] args) {
		
		Electrodomesticos[] ArrayElec = new Electrodomesticos[10];
		
		//Debemos Recordar como fueron creados los constructores.
		
		// Las posibilidades de color son: blanco, negro, rojo, azul y gris.
		// Las posibilidades de Consumo Energetico Son: "A", "B", "C", "D", "E" y"F"
		
		//Electrodomesticos precio, color, ConsumoEnergetico y peso
		ArrayElec [0] = new Electrodomesticos(50, "rojo",'A', 30);
		ArrayElec[0].comprobarConsumoEnergetico('A'); //Para comprobar el Consumo Energetico.
		ArrayElec[0].comprobarColor("rojo");// Para comprobar el color
		//No tiene sentido comprobar en los siguientes debido a que me fije en las opciones
		//para crearlo.
		
		ArrayElec[0].precioFinal(); //Para realizar los cambio de precio por peso 
		//y consumo energetico.
		
		ArrayElec [1] = new Electrodomesticos(250, "negro",'B', 80);
		ArrayElec [1].precioFinal();
		
		ArrayElec [2] = new Electrodomesticos(150, "blanco",'D', 100);
		ArrayElec [2].precioFinal();
		
		
		//Television resolucion, sintonizador, precio, color, consumoEnergetico y  peso
		
		//creamos 3 Televisores.
		
		ArrayElec [3] = new Television(40, true, 150, "rojo",'A', 60);
		ArrayElec [4] = new Television(40, true, 150, "rojo",'A', 60);
		ArrayElec [5] = new Television(40, true, 150, "rojo",'A', 60);
		
		
		
		
		//Lavadora precio, color, ConsumoEnergetico y peso)
		ArrayElec [6] = new Lavadora (150, "rojo",'A', 60);
		ArrayElec [7] = new Lavadora(150, "rojo",'A', 60);
		ArrayElec [8] = new Lavadora(150, "rojo",'A', 60);
		ArrayElec [9] = new Lavadora(150, "rojo",'A', 60);
		
		
		
		
		
		
		
		System.out.println(ArrayElec_1[9].getPrecio());
